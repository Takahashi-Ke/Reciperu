  <% recipes.each do |recipe| %>
    <div class="row recipe-item">

      <div class="col-md-3 recipe-image">
        <%= link_to recipe_path(recipe.id) do %>
          <%= attachment_image_tag recipe, :recipe_image, :fill, 250, 250, fallback: "no_image.png" %>
        <% end %>
      </div>
      <div class="col-md-3">
        <h4><%= recipe.title %></h4>
        <p>by 
          <span><%= link_to user_path(recipe.user_id) do %><%= recipe.user.name %><% end %></span>
        </p>
        <p><%= recipe.body %></p>
      </div>
    </div>
  <% end %>