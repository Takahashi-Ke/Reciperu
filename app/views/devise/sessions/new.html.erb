<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <p>ニックネーム</p>
    <%= f.text_field :name, autofocus: true, autocomplete: "current-name" %>
  </div>
  
  <div class="field">
    <p>メールアドレス</p>
    <%= f.email_field :email, autocomplete: "current-email" %>
  </div>

  <div class="field">
    <p>パスワード</p>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
